{
  "parser": "typescript-eslint-parser",
  "plugins": ["typescript", "jest"],
  "extends": [
    "airbnb-base",
    "typescript",
    "plugin:prettier/recommended",
    "typescript/prettier"
  ],
  "rules": {
    "import/extensions": "off",
    "import/no-unresolved": "off",
    "no-undef": "off",
    "no-unused-vars": "off",
    "typescript/no-unused-vars": "error",
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "es5"
      }
    ],
    "prefer-const": "error",
    "import/no-dynamic-require": "off"
  },
  "overrides": [
    {
      "files": ["lib/__{tests,mocks}__/**/*.ts"],
      "rules": {
        "require-jsdoc": "off",
        "import/first": "off"
      }
    }
  ],
  "env": {
    "jest/globals": true,
    "node": true
  }
}
